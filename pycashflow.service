[Unit]
Description=pycashflow web application
After=network.target

[Service]
User=www-data
WorkingDirectory=[PYCASHFLOW PROGRAM DIRECTORY]
Environment=FLASK_CONFIG=production
Environment=DATABASE_URL=sqlite:///[DATABASE FOLDER LOCATION]
ExecStart=/usr/local/bin/waitress-serve --url-prefix=/project --listen=127.0.0.1:5000 --call project:create_app
Restart=always

[Install]
WantedBy=multi-user.target
